@model AuthProject.Models.Users
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<head>
    <style>
        .form-control {
            width: 40%;
            margin: 10px 0;
        }

        .form-check-input {
            margin-top: 10px;
        }

        .btn-primary {
            margin-top: 10px;
        }
    </style>
</head>
<form method="post" asp-action="Login">
    <div class="form-group">
        <label for="exampleInputEmail1" asp-for="Email"> Email address</label>
        <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email">

    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" asp-for="Password"> Password</label>
        <input type="password" class="form-control" asp-for="Password" name="password" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary"> Submit</button>
</form>

